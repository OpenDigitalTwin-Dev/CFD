sudo apt -y install gcc g++ make m4 libmpich-dev libperl-dev p7zip-full git libboost-all-dev libeigen3-dev libmetis-dev

#7za x contrib.7z -o/$PWD/

export PETSC_DIR=$PWD/../../NLA/install/petsc_install

mkdir build
cd build
./../configure --prefix=$PWD/../../install/libmesh_install --enable-petsc-required --with-metis=/usr
make -j4
make install


# libmesh itself save external libs in contrib dir and also have metis, if don't use --with-metis=/usr in configure, it may use it's own metis but for the example in ibamr, the example use the system metis, then will have some problems, so we need to use --with-metis=/usr